package com.jpmc.theater.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jpmc.theater.model.Showing;
import com.jpmc.theater.repository.ShowingRepository;

@Service
public class ShowingService {

	@Autowired
	ShowingRepository showingRepository;
	
	public Optional<Showing> findByTheaterAndMovieAndShowNum(final Long theater, final Long movie, final Integer showNum){
		return showingRepository.findByTheaterAndMovieAndShowNum(theater, movie, showNum);
	}
}
