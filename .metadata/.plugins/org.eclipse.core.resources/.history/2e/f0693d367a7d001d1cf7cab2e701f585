package com.jpmc.theater.repository;

import java.time.LocalDateTime;
import java.util.Optional;

import org.springframework.data.repository.CrudRepository;
import org.springframework.stereotype.Repository;

import com.jpmc.theater.model.Showing;

@Repository
public interface ShowingRepository extends CrudRepository<Showing, Integer> {

	public Optional<Showing> findByTheaterAndMovieAndShowStartDateTime(final Long theater, final Long movie, final LocalDateTime showStartTime);
}
