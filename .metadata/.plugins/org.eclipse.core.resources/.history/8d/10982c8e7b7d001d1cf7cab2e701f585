package com.jpmc.theater.repository;

import java.time.LocalDateTime;
import java.util.Optional;

import org.springframework.data.repository.CrudRepository;
import org.springframework.stereotype.Repository;

import com.jpmc.theater.model.Showing;

@Repository
public interface ShowingRepository extends CrudRepository<Showing, Integer> {

	//@Query("select s from Showing s where s.theater = :theater and s.movie = :movie and s.showDateTime = :showStartTime")
	public Optional<Showing> findByTheaterAndMovieAndShowStartDateTime(final Long theater, final Long movie, final LocalDateTime showStartDateTime);
}
