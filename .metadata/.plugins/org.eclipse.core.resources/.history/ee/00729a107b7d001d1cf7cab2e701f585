package com.jpmc.theater.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jpmc.theater.model.Showing;
import com.jpmc.theater.repository.ShowingRepository;

import lombok.NonNull;

@Service
public class ShowingService {

	@Autowired
	ShowingRepository showingRepository;
	
	public Optional<Showing> findByTheaterAndMovieAndShowStartDateTime(final Long theater, final Long movie, final @NonNull String showStartTime){
		return showingRepository.findByTheaterAndMovieAndShowStartDateTime(theater, movie, showStartTime);
	}
	
	public Showing save(Showing Showing) {
		return showingRepository.save(Showing);
	}
	 
	public long getShowingCount() {
		return showingRepository.count();
	}
}
