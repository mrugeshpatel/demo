package com.jpmc.theater.util;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

public class DateFormatter {

	private static final SimpleDateFormat timeFormatter = new SimpleDateFormat("HH-mm-ss");
	
	public static Date getTime(Date date) throws ParseException {
		String format = timeFormatter.format(date);
		return timeFormatter.parse(format);
	}
	
	public static Date getTime(String time) throws ParseException {
		return timeFormatter.parse(time);
	}
}
